[MAIN]
ignore-patterns=.*_pb2.py
reports=n
extension-pkg-allow-list=lxml.etree

[FORMAT]
indent-string='  '
max-line-length=120

[MISCELLANEOUS]
notes=FIXME,XXX

[TYPECHECK]
ignored-modules=google.protobuf

[MESSAGES CONTROL]
disable=
  abstract-method,
  arguments-differ,
  broad-exception-raised,
  duplicate-code,
  invalid-name,
  missing-docstring,
  no-member,
  no-name-in-module,  # delegate to mypy which has better protobuf support
  too-few-public-methods,
  too-many-ancestors,
  too-many-arguments,
  too-many-nested-blocks,
  undefined-variable,  # delegate to mypy which has better protobuf support
  unused-argument,
  unused-wildcard-import,
  use-dict-literal,
  wildcard-import
enable=missing-final-newline
